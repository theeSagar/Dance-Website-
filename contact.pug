extends base.pug 

block scripts
        script(src='/static/index.js')
//-   script(src='/pets.js')

block style
    style
        include ../static/style.css
        include ../static/styleContact.css

block content 
        div.container
            h2 Contact us at
            form(action="/contact" ,method='post',class='myForm')
                input(type="text",class='myinput',name='name',placeholder='enter your name here')
                input(type="email",class='myinput',name='E-mail',placeholder='enter your E-mail here')
                input(type="text",class='myinput',name='address',placeholder='enter your address here')
                input(type="text",class='myinput',name='phone',placeholder='enter your phone number here')
                textarea(name="text1",type="email", cols="10", rows="10" ,class='myinput',placeholder='what are your concern')
                button(class='btn')
                 | submit